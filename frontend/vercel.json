{
  "version": 2,
  "name": "betcompare-frontend",
  "builds": [
    { "src": "package.json", "use": "@vercel/next" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://api.betcompare.co.ke/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_SITE_URL": "https://betcompare.co.ke",
    "NEXT_PUBLIC_API_URL": "https://api.betcompare.co.ke"
  }
} 